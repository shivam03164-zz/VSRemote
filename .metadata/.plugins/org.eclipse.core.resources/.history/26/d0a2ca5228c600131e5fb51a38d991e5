public class BackgroundTask extends AsyncTask<String, String, String> {
		 @Override
		      protected String doInBackground(String... arg0) {
		    try {
		 //10.0.2.2 -- localhost 	
		    	//EditText text = (EditText)findViewById(R.id.EditText01); 
				
				String ipcadd;
				String x;
